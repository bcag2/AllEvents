<?xml version="1.0" encoding="utf-8"?>

<extension type="plugin" group="allevents" version="3.1" method="upgrade">
    <name>AllEvents - Open Graph</name>
    <creationDate>%%build.date%%</creationDate>
    <author>Emmanuel Lecoester</author>
    <authorEmail>%%ae3.authoremail%%</authorEmail>
    <authorUrl>%%ae3.authorurl%%</authorUrl>
    <copyright>%%ae3.copyright%%</copyright>
    <license>%%ae3.license%%</license>
    <version>%%ae3.version%%</version>
    <description>PLG_ALLEVENTS_OPENGRAPH_XML_DESC</description>
    <files>
        <filename plugin="opengraph">opengraph.php</filename>
        <filename>index.html</filename>
    </files>
    <languages folder="language">
        <language tag="fr-FR">fr-FR/fr-FR.plg_allevents_opengraph.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.plg_allevents_opengraph.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_allevents_opengraph.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_allevents_opengraph.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="event" label="PLG_ALLEVENTS_OPENGRAPH_EVENT_OPTIONS">
                <field name="title_e" type="text" default="" label="PLG_ALLEVENTS_OPENGRAPH_TITLE_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_TITLE_DESC"/>
                <field name="type_e" type="list" default="activity" label="PLG_ALLEVENTS_OPENGRAPH_TYPE_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_TYPE_DESC">
                    <option value="activity">activity</option>
                    <option value="sport">sport</option>
                    <option value="bar">bar</option>
                    <option value="company">company</option>
                    <option value="cafe">cafe</option>
                    <option value="hotel">hotel</option>
                    <option value="restaurant">restaurant</option>
                    <option value="cause">cause</option>
                    <option value="sports_league">sports_league</option>
                    <option value="sports_team">sports_team</option>
                    <option value="band">band</option>
                    <option value="government">government</option>
                    <option value="non_profit">non_profit</option>
                    <option value="school">school</option>
                    <option value="university">university</option>
                    <option value="actor">actor</option>
                    <option value="athlete">athlete</option>
                    <option value="author">author</option>
                    <option value="director">director</option>
                    <option value="musician">musician</option>
                    <option value="politician">politician</option>
                    <option value="public_figure">public_figure</option>
                    <option value="city">city</option>
                    <option value="country">country</option>
                    <option value="landmark">landmark</option>
                    <option value="state_province">state_province</option>
                    <option value="album">album</option>
                    <option value="book">book</option>
                    <option value="drink">drink</option>
                    <option value="food">food</option>
                    <option value="game">game</option>
                    <option value="product">product</option>
                    <option value="song">song</option>
                    <option value="movie">movie</option>
                    <option value="tv_show">tv_show</option>
                    <option value="blog">blog</option>
                    <option value="website">website</option>
                    <option value="article">article</option>
                </field>
                <field name="image_e" type="media" default="" label="PLG_ALLEVENTS_OPENGRAPH_IMAGE_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_IMAGE_DESC"/>
                <field name="url_e" type="text" default="" label="PLG_ALLEVENTS_OPENGRAPH_URL_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_URL_DESC"/>
                <field name="site_name_e" type="text" default="" label="PLG_ALLEVENTS_OPENGRAPH_SITE_NAME_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_SITE_NAME_DESC"/>
                <field name="description_e" type="textarea" default="" label="PLG_ALLEVENTS_OPENGRAPH_DESCRIPTION_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_DESCRIPTION_DESC"/>
                <field name="display_e" type="list" default="1" label="PLG_ALLEVENTS_OPENGRAPH_DISPLAY_EVENT_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_DISPLAY_EVENT_DESC">
                    <option value="1">PLG_ALLEVENTS_OPENGRAPH_YES</option>
                    <option value="0">PLG_ALLEVENTS_OPENGRAPH_NO</option>
                </field>
            </fieldset>
            <fieldset name="common" label="PLG_ALLEVENTS_OPENGRAPH_COMMON_OPTIONS">
                <field name="app_id" type="text" default="" label="PLG_ALLEVENTS_OPENGRAPH_APP_ID_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_APP_ID_DESC"/>
                <field name="other" type="textarea" default="" label="PLG_ALLEVENTS_OPENGRAPH_OTHER_PROPERTIES_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_OTHER_PROPERTIES_DESC"/>
                <field name="render_type" type="list" default="1" label="PLG_ALLEVENTS_OPENGRAPH_RENDER_TYPE_LABEL"
                       description="PLG_ALLEVENTS_OPENGRAPH_RENDER_TYPE_DESC">
                    <option value="1">PLG_ALLEVENTS_OPENGRAPH_NAME</option>
                    <option value="2">PLG_ALLEVENTS_OPENGRAPH_PROPERTY</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <aepremiumonly>true</aepremiumonly>
    <aedisplayevents>false</aedisplayevents>
</extension>